{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDirs": [
            "src"
        ],
        "sourceMap": false,
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "outDir": "./out/test",
        "declarationDir": "dist/types",
        "declaration": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "**/node_modules",
        "**/dist",
        "**/out"
    ],
    "include": [
        "./src/**/*.ts", // Include your source files
        "./src/test/**/*.ts"
    ]
}
