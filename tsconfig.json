{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "paths": {
      "@/*": ["packages/*"]
    },
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "out",
    "declaration": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "**/node_modules",
    "**/dist",
    "**/out"
  ],
  "include": [
    "./**/*.ts", // Include your source files
    "./**/*.js",
    "./**/*.tsx",
    "./test/**/*.ts" // Include your test files
  ]
}
