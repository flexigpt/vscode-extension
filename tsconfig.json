{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "paths": {
      "@/aiprovider/*": ["packages/aiprovider/*"],
      "@/conversations/*": ["packages/conversations/*"],
      "@/logger/*": ["packages/logger/*"],
      "@/prompts/*": ["packages/prompts/*"],
      "@/spec/*": ["packages/spec/*"],
      "@/reactui/*": ["packages/reactui/*"]
    },
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "out",
    "declarationDir": "dist/types",
    "declaration": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "**/node_modules",
    "**/dist",
    "**/out"
  ],
  "include": [
    "./**/*.ts", // Include your source files
    "./**/*.js",
    "./**/*.tsx",
    "./test/**/*.ts" // Include your test files
  ]
}
